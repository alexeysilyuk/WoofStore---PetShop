@model mvc_project.Models.ShopItem

@{
    ViewBag.Title = "View";
}

<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>


<h2>Add new Item to Shop</h2>

<fieldset class="row-fluid appoform">
    <form action="ShopItemSubmit" method="post">

        <div class="col-md-12 col-xs-12">

            <div class="col-md-6">
                <strong>Name of item:</strong>
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })   <div style="color:red">  @Html.ValidationMessageFor(x => x.Name)</div>
            </div>

            <div class="col-md-6">
                <strong>Description:</strong>
                @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })   <div style="color:red">  @Html.ValidationMessageFor(x => x.Description)</div>
            </div>

            <div class="col-md-6">
                <strong>Photo url:</strong>
                @Html.TextBoxFor(m => m.photo_url, new { @class = "form-control" })   <div style="color:red">  @Html.ValidationMessageFor(x => x.photo_url)</div>
            </div>

            <div class="col-md-6">
                <strong>Price ($):</strong>
                @Html.TextBoxFor(m => m.price, new { @class = "form-control" })   <div style="color:red">  @Html.ValidationMessageFor(x => x.price)</div>
            </div>

           
            <button type="submit" id="submit" class="btn btn-primary btn-block">Add Item</button>

        </div>
        <br />


    </form>
</fieldset>