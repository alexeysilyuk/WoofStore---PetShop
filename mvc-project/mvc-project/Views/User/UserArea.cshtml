@model mvc_project.Models.User
@using mvc_project.Models



@{
    List<User> q = new List<User>();
    q.Add(Model);
    WebGrid o = new WebGrid(q);
    ViewBag.Title = "UserArea";
}

<div class="col-md-6 col-sm-6 col-xs-12">
    <div class="plan wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s;">
        <div class="head">
            <h2><strong>Profile info</strong></h2>
        </div>


        @*@o.GetHtml();*@

        <br />
        <fieldset class="row-fluid appoform leftSide col-md-12">

            <div class="col-md-12">
                <input type="hidden" name="photo_url" id="photo_url" class="form-control">
            </div>

            <div class="col-md-12">
                <input type="hidden" name="username" id="username" class="form-control">
            </div>

            <label>First Name</label>
            <div class="col-md-12">
                <input type="text" name="fname" id="fname" class="form-control">
            </div>

            <label>Last Name</label>
            <div class="col-md-12">
                <input type="text" name="lname" id="lname" class="form-control">
            </div>

            <label>Email</label>
            <div class="col-md-12">
                <input type="email" name="email" id="email" class="form-control">
            </div>

            <label>Phone</label>
            <div class="col-md-12">
                <input type="text" name="phone" id="phone" class="form-control">
            </div>

            <center>
                <input type="submit" class="btn btn-primary" value="Update profile" />
            </center>
            

        </fieldset>


       
    </div>
</div>

<div class="col-md-6">
    <div class="plan wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s;">

        <div class="head">
            <h2><strong>Balance</strong></h2>
        </div>

        <div class="price">
            <br>
            <h3><span class="symbol">$</span>@Model.money</h3>

        </div>
        <button type="button" class="btn btn-primary">Fill Balance</button>

    </div>
</div>


<div class="clearfix"></div>

<div class="col-md-6 col-sm-6 col-xs-12">
    <div class="plan wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s;">
        <div class="head">
            <h2><strong>Change Password</strong></h2>
        </div>


        @*@o.GetHtml();*@

        <br />
        <fieldset class="row-fluid appoform leftSide col-md-12">

            <div class="col-md-12">
                <input type="hidden" name="username" id="username" class="form-control">
            </div>

            <label>Password</label>
            <div class="col-md-12">
                <input type="text" name="password" id="password" class="form-control">
            </div>

            <label>Confirm  Password</label>
            <div class="col-md-12">
                <input type="text" name="cpassword" id="cpassword" class="form-control">
            </div>

          
            <center>
                <input type="submit" class="btn btn-primary" value="Change password" />
            </center>


        </fieldset>



    </div>
</div>


<div class="col-md-6 col-sm-6 col-xs-12">
    <div class="plan wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s;">
        <div class="head">
            <h2><strong>Change Photo</strong></h2>
        </div>


        @*@o.GetHtml();*@

        <br />
        <fieldset class="row-fluid appoform leftSide col-md-12">

            <div class="col-md-12">
                <input type="hidden" name="username" id="username" class="form-control">
            </div>

            <label>Photo Url</label>
            <div class="col-md-12">
                <input type="text" name="photo_url" id="photo_url" class="form-control">
            </div>


            <center>
                <input type="submit" class="btn btn-primary" value="Set Photo" />
            </center>


        </fieldset>



    </div>
</div>
